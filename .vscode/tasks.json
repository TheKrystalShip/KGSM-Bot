{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SFTP Admiral",
            "command": "sftp",
            "type": "shell",
            "args": [
                "cristian@hotbox:/opt/discord/admiral/install",
                "<<<",
                "$'put Admiral/bin/Release/net8.0/linux-x64/publish/*'"
            ],
            "dependsOn": "PUBLISH Admiral"
        },
        {
            "label": "DEPLOY Admiral",
            "type": "shell",
            "command": "ssh",
            "args": [
                "cristian@hotbox",
                "-t",
                "'systemctl restart admiral'"
            ],
            "dependsOn": "SFTP Admiral"
        },
        {
            "label": "PUBLISH Admiral",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish",
                "-r",
                "linux-x64"
            ]
        }
    ]
}
