{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SFTP KGSM-Bot",
            "command": "sftp",
            "type": "shell",
            "args": [
                "-r",
                "cristian@hotbox:/opt/discord/kgsm-bot/install",
                "<<<",
                "$'put KGSM/bin/Release/net8.0/linux-x64/publish/*'"
            ],
            "dependsOn": "PUBLISH KGSM-Bot"
        },
        {
            "label": "DEPLOY KGSM-Bot",
            "type": "shell",
            "command": "ssh",
            "args": [
                "cristian@hotbox",
                "-t",
                "'systemctl restart kgsm-bot'"
            ],
            "dependsOn": "SFTP KGSM-Bot"
        },
        {
            "label": "PUBLISH KGSM-Bot",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish",
                "-r",
                "linux-x64"
            ]
        },
        {
            "type": "dotnet",
            "task": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "label": "dotnet: build"
        }
    ]
}
